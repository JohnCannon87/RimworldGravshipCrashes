      <li>Vacsuit</li>
      <li>Spacer</li>
      <li>Military</li>
    </apparelTags>

    <weaponTags>
      <li>Gun</li>
      <li>SpacerGun</li>
      <li>Ranged</li>
    </weaponTags>

    <!-- Gear quality and money -->
    <gearHealthRange>
      <min>0.8</min>
      <max>1.0</max>
    </gearHealthRange>
    <weaponMoney>
      <min>200</min>
      <max>800</max>
    </weaponMoney>
    <apparelMoney>
      <min>300</min>
      <max>1000</max>
    </apparelMoney>

    <!-- Required for humanlike pawn kinds -->
    <initialResistanceRange>
      <min>0</min>
      <max>2</max>
    </initialResistanceRange>
    <initialWillRange>
      <min>0</min>
      <max>2</max>
