<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingSetMakerDef>
    <defName>GravshipCrashLoot</defName>
    <label>gravship crash loot</label>

    <root Class="ThingSetMaker_Sum">
      <options>

        <!-- Basic guaranteed loot -->
        <li>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>ComponentIndustrial</li>
                </thingDefs>
              </filter>
              <countRange>6~14</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>

        <li>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Plasteel</li>
                </thingDefs>
              </filter>
              <countRange>20~60</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>

        <li>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Steel</li>
                </thingDefs>
              </filter>
              <countRange>35~120</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>

        <!-- Optional random loot -->
        <li>
          <thingSetMaker Class="ThingSetMaker_RandomOption">
            <options>

              <li>
                <weight>0.4</weight>
                <thingSetMaker Class="ThingSetMaker_StackCount">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>ComponentSpacer</li>
                      </thingDefs>
                    </filter>
                    <countRange>2~5</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

              <li>
                <weight>0.35</weight>
                <thingSetMaker Class="ThingSetMaker_StackCount">
                  <fixedParams>
                    <filter>
                      <thingDefs>
                        <li>MedicineUltratech</li>
                      </thingDefs>
                    </filter>
                    <countRange>2~5</countRange>
                  </fixedParams>
                </thingSetMaker>
              </li>

            </options>
          </thingSetMaker>
        </li>

      </options>
    </root>
  </ThingSetMakerDef>

</Defs>
